<h1>Home#index</h1>


<div id='calendar'></div>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',

            eventSources: [
            {
            events: <%= raw @events.to_json %>,
            editable: true,
            color: 'yellow',     
            textColor: 'black', 
            borderColor: 'black'
            }
            ]
        });

        calendar.render();

    });
</script>